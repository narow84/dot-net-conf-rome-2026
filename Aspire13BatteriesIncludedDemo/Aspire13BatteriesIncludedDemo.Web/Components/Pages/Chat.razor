@page "/chat"
@attribute [StreamRendering(true)]
@rendermode InteractiveServer

@inject ChatApiClient ChatApi

<PageTitle>Chat AI</PageTitle>

<h1>Chat AI</h1>

<p>Parla con il <strong>Product Assistant</strong> â€” un agente AI che puÃ² cercare prodotti nel catalogo.</p>

<div class="chat-container d-flex flex-column" style="height: calc(100vh - 260px); min-height: 400px;">

    @* Area messaggi *@
    <div class="chat-messages flex-grow-1 overflow-auto border rounded-3 p-3 mb-3 bg-light" @ref="chatMessagesRef">
        @if (messages.Count == 0)
        {
            <div class="text-muted text-center mt-5">
                <span class="bi bi-chat-dots" style="font-size: 3rem;"></span>
                <p class="mt-2">Inizia una conversazione! Prova a chiedere:</p>
                <div class="d-flex flex-wrap justify-content-center gap-2">
                    <button class="btn btn-outline-secondary btn-sm" @onclick='() => SendSuggestion("Quali prodotti avete?")'>
                        Quali prodotti avete?
                    </button>
                    <button class="btn btn-outline-secondary btn-sm" @onclick='() => SendSuggestion("Cerca prodotti con pizza")'>
                        Cerca prodotti con pizza
                    </button>
                    <button class="btn btn-outline-secondary btn-sm" @onclick='() => SendSuggestion("Quali sono i prodotti piÃ¹ costosi?")'>
                        Prodotti piÃ¹ costosi?
                    </button>
                </div>
            </div>
        }

        @foreach (var msg in messages)
        {
            <div class="d-flex mb-3 @(msg.IsUser ? "justify-content-end" : "justify-content-start")">
                <div class="@(msg.IsUser ? "bg-primary text-white" : "bg-white border") rounded-3 p-3 shadow-sm"
                     style="max-width: 75%; white-space: pre-wrap; word-break: break-word;">
                    <div class="fw-semibold small mb-1 @(msg.IsUser ? "text-white-50" : "text-muted")">
                        @(msg.IsUser ? "Tu" : "ðŸ¤– Product Assistant")
                    </div>
                    @msg.Content
                </div>
            </div>
        }

        @if (isLoading)
        {
            <div class="d-flex justify-content-start mb-3">
                <div class="bg-white border rounded-3 p-3 shadow-sm">
                    <div class="fw-semibold small mb-1 text-muted">ðŸ¤– Product Assistant</div>
                    <div class="d-flex align-items-center gap-1">
                        <div class="spinner-grow spinner-grow-sm text-secondary" role="status"></div>
                        <div class="spinner-grow spinner-grow-sm text-secondary" role="status" style="animation-delay: 0.15s;"></div>
                        <div class="spinner-grow spinner-grow-sm text-secondary" role="status" style="animation-delay: 0.3s;"></div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* Input area *@
    <div class="chat-input">
        <div class="input-group">
            <input type="text"
                   class="form-control form-control-lg"
                   placeholder="Scrivi un messaggio..."
                   @bind="currentMessage"
                   @bind:event="oninput"
                   @onkeydown="HandleKeyDown"
                   disabled="@isLoading" />
            <button class="btn btn-primary px-4" @onclick="SendMessage" disabled="@(isLoading || string.IsNullOrWhiteSpace(currentMessage))">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm" role="status"></span>
                }
                else
                {
                    <span class="bi bi-send-fill"></span>
                }
            </button>
        </div>
    </div>
</div>

@code {
    private List<ChatMessage> messages = new();
    private string currentMessage = string.Empty;
    private bool isLoading = false;
    private ElementReference chatMessagesRef;

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(currentMessage) || isLoading)
            return;

        var userMessage = currentMessage.Trim();
        currentMessage = string.Empty;

        messages.Add(new ChatMessage(userMessage, IsUser: true));
        isLoading = true;
        StateHasChanged();

        try
        {
            var reply = await ChatApi.SendMessageAsync(userMessage);
            messages.Add(new ChatMessage(reply, IsUser: false));
        }
        catch (Exception ex)
        {
            messages.Add(new ChatMessage($"Errore: {ex.Message}", IsUser: false));
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SendSuggestion(string suggestion)
    {
        currentMessage = suggestion;
        await SendMessage();
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private record ChatMessage(string Content, bool IsUser);
}
